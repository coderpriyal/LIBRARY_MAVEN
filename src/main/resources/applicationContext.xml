<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
          http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Book beans using constructor injection -->
    <bean id = "book1" class = "com.example.LibraryManagement.Book">
        <constructor-arg value = "101"/>
        <constructor-arg value = "Harry Potter and Prisoner of Azkaban"/>
        <constructor-arg value = "JK Rowling"/>
    </bean>

    <bean id = "book2" class = "com.example.LibraryManagement.Book">
        <constructor-arg value = "102"/>
        <constructor-arg value = "Spring in Action"/>
        <constructor-arg value = "Craig Walls"/>
    </bean>

    <bean id = "book3" class = "com.example.LibraryManagement.Book">
        <constructor-arg value = "103"/>
        <constructor-arg value = "Effective Java"/>
        <constructor-arg value = "Joshua Bloch"/>
    </bean>

    <!-- Library bean with list and reference -->

    <bean id = "library" class = "com.example.LibraryManagement.Library">
        <property name="name" value=" City Central Library " />
        <property name="books">
            <list>
                <ref bean = "book1"/>
                <ref bean = "book2"/>
                <ref bean = "book3"/>
            </list>
        </property>
    </bean>
</beans>






